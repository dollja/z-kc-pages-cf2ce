<script type="module" src="https://1.www.s81c.com/common/carbon-for-ibm-dotcom/tag/v1/latest/leadspace.min.js"></script>

<header aria-labelledby="ibm-leadspace-title">
    <dds-leadspace alt="alt text" default-src="www.example.com" size="medium" >
        <dds-leadspace-heading>{{ title }} content solution</dds-leadspace-heading>
        {% if bannerContent %}
            {{ bannerContent.bannerText }}
            <dds-button-group slot="action">
                <dds-button-group-item href="{{ bannerContent.bannerLinkUrl }}">{{ bannerContent.bannerLinkText }}</dds-button-group-item>
            </dds-button-group>
        {% endif %}
        <dds-leadspace-image slot="image" class="bx--image" alt="alt text" default-src="https://picsum.photos/id/1076/1056/480"></dds-leadspace-image>
    </dds-leadspace>
</header>